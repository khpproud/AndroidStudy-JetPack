<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainFragment">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:id="@+id/scoreAText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/scoreBText"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:id="@+id/scoreBText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scoreAText"
            app:layout_constraintHorizontal_bias="0.5"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            tools:text="0" android:textAlignment="center"/>
    <Button
            android:text="PlusA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusABtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/plusBBtn"
            app:layout_constraintTop_toBottomOf="@+id/scoreAText"
            app:layout_constraintBaseline_toBaselineOf="@+id/plusBBtn"/>
    <Button
            android:text="PlusB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plusBBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/plusABtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/scoreBText"/>
</androidx.constraintlayout.widget.ConstraintLayout>
